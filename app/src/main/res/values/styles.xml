<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
    </style>

    <style name="BadButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/cherryRed</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="CustomTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:textColor">#FF0000</item> <!-- Cambia aquÃ­ al color que desees -->
    </style>

    <style name="SectionFieldEditableAreaLight" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SectionFieldEditableAreaDark" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_night</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>