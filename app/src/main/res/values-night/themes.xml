<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.XTicket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/darkPink</item>
        <item name="colorSecondary">@color/cherryRed</item>
        <item name="android:statusBarColor">@color/darkPink</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/enter_transition</item>
        <item name="android:windowExitTransition">@transition/exit_transition</item>
    </style>

    <style name="collapseTitle">
        <item name ="android:letterSpacing"> 0.15 </item>
        <item name ="android:fontFamily"> sans-serif" </item>
        <item name ="android:textSize"> 30sp </item>
        <item name ="android:textStyle"> bold </item>
        <item name ="android:textColor">@color/black </item>
    </style>

    <style name="SectionField" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SectionTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SectionFieldEditableArea" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_night</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SectionFieldSearchArea" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_background_night</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SectionFieldEditableAreaError" parent="@android:style/TextAppearance">
        <item name="android:drawableTint">@color/red</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_error</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="SectionFieldEditableAreaImage" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_no_right_side_dark</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:background">@drawable/spinner_border_dark</item>
    </style>

    <style name="loginBackground" parent="">
        <item name="android:background">@drawable/back_arcs_dark</item>
    </style>

    <style name="BottomBar"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/dark</item>
        <item name="itemTextAppearanceActive">@color/cherryRed</item>
        <item name="itemTextAppearanceInactive">@color/black</item>
        <item name="itemIconTint">@color/dark_nav_color</item>
        <item name="itemTextColor">@color/dark_nav_color</item>
    </style>

    <style name="cardItems" parent="">
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="loginFields" parent="">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_border_night</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SwitchColor">
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:trackTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="line">
        <item name="background">@color/white</item>
    </style>
</resources>