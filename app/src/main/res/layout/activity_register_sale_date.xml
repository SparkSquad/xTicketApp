<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.view.RegisterSaleDateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sale_date"
                style="@style/SectionField" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickDate"
                    style="@style/BasicButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pickDate"
                    app:icon="@drawable/baseline_calendar_month_24"
                    app:iconGravity="textEnd" />

                <TextView
                    android:id="@+id/eventDate"
                    style="@style/SectionField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"/>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="@string/number_of_tickets"
                        style="@style/SectionField" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="@string/price"
                        style="@style/SectionField" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etNumberOfTickets"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:inputType="number"
                        style="@style/SectionFieldEditableArea"
                        android:hint="@string/_1000"
                        android:autofillHints=""
                        android:maxLength="4"
                        android:drawableEnd="@drawable/baseline_airplane_ticket_24"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:inputType="number"
                        style="@style/SectionFieldEditableArea"
                        android:hint="@string/_1200"
                        android:autofillHints=""
                        android:maxLength="6"
                        android:drawableEnd="@drawable/baseline_attach_money_24"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/max_tickets"
                        style="@style/SectionField" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        style="@style/SectionField" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etMaxTickets"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:inputType="number"
                        style="@style/SectionFieldEditableArea"
                        android:hint="@string/_3"
                        android:autofillHints=""
                        android:maxLength="2"
                        android:drawableEnd="@drawable/baseline_production_quantity_limits_24"/>

                    <Switch
                        android:id="@+id/switchOnlyAdults"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/only_adults"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        style="@style/SwitchColor"
                        android:gravity="center"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_hour"
                        style="@style/SectionField" />

                    <TimePicker
                        android:id="@+id/tpStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:timePickerMode="spinner"
                        android:background="@color/lightGray"
                        style="@style/CustomTimePickerStyle"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_hour"
                        style="@style/SectionField" />

                    <TimePicker
                        android:id="@+id/tpEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:timePickerMode="spinner"
                        android:background="@color/lightGray"/>
                </TableRow>

            </TableLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateSaleDate"
                style="@style/BasicButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_sale_date"
                app:icon="@drawable/baseline_airplane_ticket_24"
                app:iconGravity="textEnd"
                android:layout_gravity="center"/>
        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80292727"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:indeterminateTint="@color/cherryRed"
        android:visibility="invisible"/>

</FrameLayout>