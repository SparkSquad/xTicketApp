<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/landing_gradient_background"
    tools:context=".ui.view.LandingActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_fileName="ticket.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xticket_logo"
        android:textColor="@color/white"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif"
        android:textSize="64sp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignIn"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/darkBlue"
        android:letterSpacing="0.3"
        android:text="@string/signIn"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        app:icon="@drawable/baseline_person_24"
        app:iconGravity="textEnd"
        app:iconSize="25dp"
        style="@style/BasicButtonStyle"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/darkBlue"
        android:letterSpacing="0.3"
        android:text="@string/createAccount"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconGravity="textEnd"
        app:icon="@drawable/baseline_person_outline_24"
        app:iconSize="25dp"
        style="@style/BasicButtonStyle"/>

</LinearLayout>